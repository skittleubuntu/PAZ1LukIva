<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pazduolingo.QuizClass.QuizController">

    <children>
        <VBox alignment="CENTER" spacing="40" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="0.0">
         <ProgressBar fx:id="accBar" prefWidth="1000.0" progress="0.0" />
         <HBox fx:id="infoBox" alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
            <children>
               <Label fx:id="lifeInfo" prefHeight="55.0" prefWidth="302.0" text="Label">
                  <HBox.margin>
                     <Insets right="200.0" />
                  </HBox.margin>
                  <font>
                     <Font size="44.0" />
                  </font>
               </Label>
               <Label fx:id="freqNoteLabel" prefHeight="55.0" prefWidth="431.0" text="Label">
                  <font>
                     <Font size="44.0" />
                  </font>
                  <HBox.margin>
                     <Insets right="100.0" />
                  </HBox.margin>
               </Label>
            </children>
         </HBox>

            <Label fx:id="questionLabel" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="What is the note" />

            <Button fx:id="noteQuestionButton" prefHeight="57.0" prefWidth="173.0" style="-fx-font-size: 22px;" text="Play Question" />

            <HBox fx:id="answersContainer" alignment="CENTER" spacing="30" />
        </VBox>
    </children>
</AnchorPane>
