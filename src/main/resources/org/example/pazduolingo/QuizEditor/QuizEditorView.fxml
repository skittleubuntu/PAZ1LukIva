<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.pazduolingo.QuizEditor.QuizEditorController">


    <top>
        <VBox spacing="10">
            <TextField promptText="Name quiz" />
            <TextArea prefRowCount="3" promptText="Description" />
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <content>
                <VBox fx:id="questionContainer" spacing="10" />
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <Button fx:id="addQuestionButton" maxWidth="Infinity" text="+ Add question" />
        </HBox>
    </bottom>
</BorderPane>
